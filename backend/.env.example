# SPY TA Tracker - Backend Environment Configuration
# Copy this file to .env and customize values for your backend

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# SQLite (Default - good for quick testing)
DATABASE_URL=sqlite:///./spy_tracker.db

# PostgreSQL (Recommended for development and production)
# Local development with Docker (default in start.sh)
# DATABASE_URL=postgresql+psycopg2://spy:pass@127.0.0.1:5433/spy

# PostgreSQL - Manual installation
# DATABASE_URL=postgresql+psycopg2://spy:pass@localhost:5432/spy

# PostgreSQL - Production with SSL
# DATABASE_URL=postgresql+psycopg2://username:password@host:port/database?sslmode=require

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

APP_NAME=SPY TA Tracker
DEBUG=true
TIMEZONE=America/Chicago
SYMBOL=SPY

# CORS - Frontend origin(s) allowed to access API
FRONTEND_ORIGIN=*

# ============================================================================
# AI/OPENAI CONFIGURATION
# ============================================================================

# OpenAI API Key (required for AI predictions)
OPENAI_API_KEY=sk-your-openai-api-key-here

# AI Model Configuration
OPENAI_MODEL=gpt-5
OPENAI_REASONING_EFFORT=minimal
OPENAI_MAX_COMPLETION_TOKENS=600
OPENAI_TEMPERATURE=0.2
OPENAI_TEXT_VERBOSITY=low

# Historical data lookback for AI context (days)
AI_LOOKBACK_DAYS=5

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Backend API port
API_PORT=8000
